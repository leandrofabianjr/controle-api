<main>
  <div class="container">
    <h1>Edição de Produto</h1>
    <div class="mb-5"></div>
    {{#if message}}
    <div class="alert alert-{{ message.type }}">{{ message.message }}</div>
    {{/if}}
    <form action="/products/{{ id }}" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="mb-3">
        <label for="product-name" class="form-label">Nome do produto</label>
        {{#inputWithError 'name'}}
        <input type="text" class="form-control" name="name" id="product-name" placeholder="Nome do produto">
        {{/inputWithError}}
      </div>
      <div class="d-flex justify-content-between">
        <a class="btn btn-light" href="/products">Voltar</a>
        <input class="btn btn-primary" type="submit" value="Salvar">
      </div>
    </form>
  </div>
</main>