<main>
  <div class="container">
    <h1>Produtos</h1>
    <div class="d-flex justify-content-end">
      <a class="btn btn-primary" href="/products/create">Novo</a>
    </div>
    {{#if products.length}}
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each products }}
        <tr>
          <td>{{ this.name }}</td>
          <td>
            <a href="/products/{{ this.id }}/edit">Editar</a>
          </td>
        </tr>
        {{/each }}
      </tbody>
    </table>
    {{ else }}
    <p>Não há produtos cadastrados</p>
    {{/if}}
  </div>
</main>